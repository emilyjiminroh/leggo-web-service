          position: new kakao.maps.LatLng(37.554329, 127.102969), // 커스텀 오버레이를 표시할 좌표
          xAnchor: -0.15, // 컨텐츠의 x 위치
          yAnchor: 0.5, // 컨텐츠의 y 위치
        });

        // 지도에 마커를 생성하고 표시한다 - 청담대교
